{
    "name": "zvermafia/alif-api-wrapper",
    "type": "library",
    "description": "API wrapper for the alif.uz (online transliteration service, uzbek latin <=> uzbek cyrillic)",
    "keywords": [
        "library",
        "package",
        "api",
        "wrapper"
    ],
    "homepage": "https://github.com/zvermafia/alif-api-wrapper",
    "license": "MIT",
    "authors": [
        {
            "name": "Mokhirjon Naimov",
            "email": "mohirjon@gmail.com",
            "homepage": "https://twitter.com/zvermafia",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.1.3",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Zvermafia\\Transliteration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zvermafia\\Transliteration\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": "phpcbf -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
